+    public void onLoadMore() {
+        curPage++;
+        queryMyClassmates(curPage, STATE_MORE);
+    }
+
+    @Override
+    public void onRefresh() {
+        curPage = 0;
+        queryMyClassmates(curPage, STATE_REFRESH);
+    }
+
+    @Override
+    public void onPause() {
+        super.onPause();
+        curPage = 0;
+    }
