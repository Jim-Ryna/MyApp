+    }
+
+    public void setSpecificIntro(String specificIntro) {
+        this.specificIntro = specificIntro;
+    }
+
+    public BmobFile getOrgPic() {
+        return orgPic;
+    }
+
+    public void setOrgPic(BmobFile orgPic) {
+        this.orgPic = orgPic;
+    }
+
+    public Boolean getPassExam() {
+        return passExam;
+    }
+
+    public void setPassExam(Boolean passExam) {
+        this.passExam = passExam;
+    }
+
+    public int getClickCount() {
+        return clickCount;
+    }
+
+    public void setClickCount(int clickCount) {
+        this.clickCount = clickCount;
+    }
+
+    public String getOrgName() {
+        return orgName;
+    }
+
+    public void setOrgName(String orgName) {
+        this.orgName = orgName;
+    }
+
