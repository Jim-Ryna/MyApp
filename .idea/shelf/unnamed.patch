+ */
+public class OrgAdapter extends RecyclerView.Adapter<OrgAdapter.ViewHolder> {
+    private Activity activity;
+    private List<Organization> orgs;
+
+    public OrgAdapter(Activity activity, List<Organization> orgs) {
+        this.activity = activity;
+        this.orgs = orgs;
+    }
+
+    public void setData(List<Organization> orgs){
+        this.orgs = orgs;
+    }
+
+    @Override
+    public OrgAdapter.ViewHolder onCreateViewHolder(ViewGroup parent, int viewType) {
+        View view = LayoutInflater.from(activity).inflate(R.layout.item_organise, parent, false);
+        return new ViewHolder(view);
+    }
+
+    @Override
+    public void onBindViewHolder(ViewHolder holder, int position) {
+        holder.orgName.setText(orgs.get(position).getOrgName());
+        if (orgs.get(position).getBaseIntro() != null){
+            holder.orgIntro.setText(orgs.get(position).getBaseIntro());
+        }
+        if (orgs.get(position).getOrgPic() != null){
+            orgs.get(position).getOrgPic().loadImage(activity, holder.orgPic);
+
+        }
+        setClickEvent(position, holder.cardView);
+    }
+
+    @Override
+    public int getItemCount() {
+        return orgs == null ? 0 : orgs.size();
+    }
+
+    public static class ViewHolder extends RecyclerView.ViewHolder {
+        TextView orgName;
+        ImageView orgPic;
+        TextView orgIntro;
+        CardView cardView;
+        public ViewHolder(View itemView) {
+            super(itemView);
+            orgIntro = (TextView) itemView.findViewById(R.id.org_introduce);
+            orgPic = (ImageView) itemView.findViewById(R.id.org_pic);
+            orgName = (TextView) itemView.findViewById(R.id.org_name);
+            cardView = (CardView) itemView.findViewById(R.id.cardView);
+        }
+    }
+
+    void setClickEvent(final int position, CardView cardView){
+        cardView.setOnClickListener(new View.OnClickListener() {
+            @Override
+            public void onClick(View v) {
+                Boolean isPass = orgs.get(position).getPassExam();
+                if (isPass == false){
+                    new AlertDialog.Builder(activity).setTitle("抱歉你未通过审核")
+                            .setMessage("请将你要创建的社团信息发送到邮箱603557667@qq.com,我们将会在收到后的24小时内处理")
+                            .setPositiveButton("确定", null)
+                            .show();
+                }else{
+                    Intent intent = new Intent(activity, MyOrgActivity.class);
+                    Bundle bundle = new Bundle();
+                    bundle.putSerializable("MyOrg", orgs.get(position));
+                    intent.putExtras(bundle);
+                    activity.startActivity(intent);
+                }
+            }
+        });
+    }
+}
