+public class MyClassFragment extends Fragment implements RecyclerArrayAdapter.OnLoadMoreListener, SwipeRefreshLayout.OnRefreshListener {
+    private static MyClassFragment mcf = null;
+    private List<MyClassMate> myClassMates = new ArrayList<>();
+    private EasyRecyclerView recyclerView;
+    private MyClassAdapter adapter;
+    private String myClass;
+
+    public static MyClassFragment getInstance() {
+        if (mcf == null) {
+            mcf = new MyClassFragment();
+        }
+        return mcf;
+    }
+
+    @Override
+    public void onAttach(Activity activity) {
+        super.onAttach(activity);
+        myClass = MainActivity.user.getMyClass();
+        Fresco.initialize(getActivity());
+    }
+
+    public View onCreateView(LayoutInflater inflater, ViewGroup container,
+                             Bundle savedInstanceState) {
+        final View view = inflater.inflate(R.layout.fragment_myclass, container, false);
+        ClassFlowButton.initButton(view, (MainActivity)getActivity());
+        recyclerView = (EasyRecyclerView) view.findViewById(R.id.recyclerView);
+        recyclerView.setLayoutManager(new LinearLayoutManager(getActivity()));
+        recyclerView.setAdapterWithProgress(adapter = new MyClassAdapter(getActivity()));
+        adapter.setMore(R.layout.view_more, this);
+        adapter.setNoMore(R.layout.view_nomore);
+        recyclerView.setRefreshListener(this);
+        queryMyClassmates(0, STATE_MORE);
+        return view;
+    }
+
+    private static final int STATE_REFRESH = 0;// 下拉刷新
+    private static final int STATE_MORE = 1;// 加载更多
+
+    private int limit = 10;        // 每页的数据是10条
+    private int curPage = 0;        // 当前页的编号，从0开始
+
+    void queryMyClassmates(final int page, final int actionType) {
+        BmobQuery<MyInfo> query = new BmobQuery<>();
+        if (NetUtil.isNetworkAvailable(getActivity())){
+            query.setCachePolicy(BmobQuery.CachePolicy.NETWORK_ELSE_CACHE);
+        }
+        else
+            query.setCachePolicy(BmobQuery.CachePolicy.CACHE_ELSE_NETWORK);
+        query.addWhereEqualTo("myClass", myClass);
+        query.setLimit(limit);            // 设置每页多少条数据
+        query.setSkip(page * limit);        // 从第几条数据开始，
+        query.findObjects(getActivity(), new FindListener<MyInfo>() {
+            @Override
+            public void onSuccess(List<MyInfo> list) {
+                myClassMates.clear();
+                if (list.size() > 0) {
+                    if (actionType == STATE_REFRESH){
+                        adapter.clear();
+                    }
+                } else {
+                    adapter.stopMore();
+                }
+                for (MyInfo user : list) {
+                    String finalURL = "";
+                    String imageUrl = "";
+                    imageUrl = user.getPicUri();
+                    String imageName = user.getPicName();
+                    if (imageUrl != "" && imageUrl != null)
+                    finalURL = BmobProFile.getInstance(getActivity()).signURL(imageName, imageUrl, App.ACCESS_KEY, 0, null);
+                    myClassMates.add(new MyClassMate(user.getUsername(), finalURL, user.getMobilePhoneNumber()));
+                }
+                adapter.addAll(myClassMates);
+                adapter.notifyDataSetChanged();
+            }
+
+            @Override
+            public void onError(int i, String s) {
+
+            }
+        });
+    }
