<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/card"
    fresco:cardBackgroundColor="@android:color/white"
    fresco:cardCornerRadius="10dp"
    fresco:cardElevation="5dp"
    android:theme="@style/nLiveoDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/head_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            fresco:roundAsCircle="true" />

        <ImageView
            android:id="@+id/show_phone"
            android:src="@drawable/no_shouji"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@+id/head_pic"/>

        <TextView
            android:id="@+id/classmate_name"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/show_phone"
            tool:text="hello" />

        <TextView
            android:id="@+id/classmate_signature"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@+id/head_pic"
            android:layout_below="@+id/classmate_name"
            android:textColor="@color/DeepPurple"
            tool:text="hello" />



    </RelativeLayout>

</android.support.v7.widget.CardView>